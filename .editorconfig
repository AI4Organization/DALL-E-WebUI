# EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,mjs}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2
